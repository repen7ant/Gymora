<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:CustomControls="clr-namespace:Gymora.CustomControls"
             x:Class="Gymora.MainPage">
    
    <VerticalStackLayout Padding="20" Spacing="25">
        
        <HorizontalStackLayout VerticalOptions="Start" 
                               Spacing="10">
            <Button ImageSource="profile.png" 
                    WidthRequest="40"
                    HeightRequest="40"
                    Clicked="OnProfileIconClicked"
                    BackgroundColor="LightGreen"
                    Padding="0"/>
            <Label Text="Приветствую, Имя_Пользователя!" 
                   FontSize="18"
                   VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <CustomControls:CalendarView x:Name="calendar" OnDateSelected="calendar_OnDateSelected"/>
    </VerticalStackLayout>
</ContentPage>
