             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gymora.MainPage">
    
    <HorizontalStackLayout 
    VerticalOptions="Start" 
    Spacing="10"
    Padding="10">

        <Button 
        ImageSource="profile.png" 
        WidthRequest="40"
        HeightRequest="40"
